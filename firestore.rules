rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios autenticados pueden leer todos los documentos
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Los usuarios pueden actualizar su propio documento
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Proyectos - todos los miembros pueden leer, solo autenticados pueden escribir
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Transacciones - usuarios autenticados pueden crear/editar/eliminar
    // (permitir crear transacciones para otros usuarios, ej: pagos directos)
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Notificaciones - usuarios autenticados pueden crear y gestionar
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Tareas - todos los usuarios autenticados pueden ver y gestionar todas las tareas
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
  }
}
